# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks

# Global properties
separator=true
separator_block_width=15

[arch-update]
command=$HOME/.i3blocks/arch-update
interval=3600
markup=pango
BASE_COLOR=#5fff5f
UPDATE_COLOR=#FFFF85
QUIET=true

[volume-pipewire]
command=$HOME/.i3blocks/volume-pipewire
interval=once
signal=1

[batterybar]
command=$HOME/.i3blocks/batterybar
label=bat: 
interval=5
markup=pango
min_width=bat: ■■■■
# Discharging colors low to high
C1=#ea83a5
C2=#ea83a5
C3=#e6b99d
C4=#e6b99d
C5=#e6b99d
C6=#90b99f
C7=#90b99f
C8=#85b5ba
CHARGING_COLOR=#aca1cf
FULL_COLOR=#aca1cf
AC_COLOR=#535353

[time]
command=date '+%Y-%m-%d %H:%M'
interval=10

