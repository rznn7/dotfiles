#!/bin/bash

VPN_NAME="OPPSCIENCE-VPN"  # Replace with your actual VPN name from the list above

if nmcli connection show --active | grep -q "$VPN_NAME"; then
    nmcli connection down "$VPN_NAME"
    notify-send "VPN" "Disconnected" -u normal -t 2000
else
    nmcli connection up "$VPN_NAME"
    notify-send "VPN" "Connected" -u normal -t 2000
fi
